<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Lista de Productos</h1>
    <ul id="productList">
        {{#each products}}
            <li>
                {{this.title}} - {{this.price}} USD - Cantidad: {{this.quantity}}
            </li>
        {{/each}}
    </ul>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        // Actualizamos la lista de productos en la vista home
        socket.on('updateProducts', (products) => {
            const productList = document.getElementById('productList');
            productList.innerHTML = ''; // Limpiar la lista de productos

            // Renderizamos los productos actualizados
            products.forEach((product) => {
                const productItem = document.createElement('li');
                productItem.textContent = `${product.title} - ${product.price} USD - Cantidad: ${product.quantity}`;
                productList.appendChild(productItem);
            });
        });
    </script>
</body>
</html>
